<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-7">

            <h1>Add a new bar</h1>

            <form method="POST" action="/new-bar" enctype="multipart/form-data">

                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name">
                </div>

                <div class="form-group">
                    <label>Description</label>
                    <input type="text" class="form-control" name="description">
                </div>

                <div class="form-group">
                    <label>Image</label>
                    <input type="file" class="form-control" name="image">
                </div>

                <div class="form-group">
                    <hr>
                    <h4>Location</h4>
                    {{!-- <input type="text" id="locationmaps"> --}}
                    <input type="text" class="form-control latitude" name="latitude">
                    <input type="text" class="form-control longitude " name="longitude">
                </div>
                <button type="submit" class="btn btn-dark">Crear nuevo bar</button>
            </form>
        </div>
    </div>
</div>
