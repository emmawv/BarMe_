<div class="backg-signupowner backg">
    <div class="filter">
        <div class="container form">
            <div class="row justify-content-center">
                <div class="col-sm-12 col-md-8 col-lg-6">

                    <form action="/signup/owner" method='POST'>
                        <h1 class="center formtitle beige" style="padding-top: 50px">Sign Up</h1>

                        {{>login}}

                        <h5>Email</h5>
                        <input type="text" name="email">

                        <h5>Telephone number</h5>
                        <input type="text" name="telephone" placeholder="Remember to start with your prefix">
                        <br>
                        <button type="submit" class="btn">Sign Up</button>

                        {{#if errorMsg}}
                    <p style="margin-top: 10px;background:  color: white; padding: 3px; font-size: 1.5em;">
                        {{errorMsg}}
                    </p>
                        {{/if}}

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>