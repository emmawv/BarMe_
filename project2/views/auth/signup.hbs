<div class="backg-signup backg">
    <div class="filter">
        <div class="container">
            <div class="row d-flex justify-content-end">
                <div class="col-sm-12 col-md-8 col-lg-6">
                    <h1 class=" beige formtitle center">Sign Up</h1>
                    <form action="/signup" method='POST' class="signup form">

                        {{>login}}
                        <br>
                        <button type="submit" class="btn">Sign Up</button>
                        <br>
                        <a href="/signup/owner">Are you an owner?</a>
                        {{#if errorMsg}}
                        <p style="margin-top: 10px;background:  color: white; padding: 3px; font-size: 1.5em;">
                            {{errorMsg}}
                        </p>
                        {{/if}}

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>